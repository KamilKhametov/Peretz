    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorForMainActivity"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_for_product"
        android:layout_width="355dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/round_corners_for_main_btn"
        android:onClick="onClickBtnForProduct"
        android:text="@string/text_for_btn_main"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
